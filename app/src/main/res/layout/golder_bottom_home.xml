<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <!--home顶部-->
 <RelativeLayout
     android:id="@+id/realtive_top_tab"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:background="@color/top_bar_bg"
     >


   <TextView
       android:id="@+id/text_home_top_hechuan"
       android:layout_marginLeft="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:text="@string/text_home_top_hechuan"
       android:textSize="16sp"
       android:layout_centerVertical="true"
       />
   <ImageView
       android:id="@+id/image_home_top_arrow"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/top_home_arrow"
       android:layout_toRightOf="@id/text_home_top_hechuan"
       android:layout_marginLeft="3dp"
       android:layout_marginTop="1dp"
       android:layout_centerVertical="true"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Golder"
         android:textSize="20sp"
         android:layout_toRightOf="@id/image_home_top_arrow"
         android:layout_toLeftOf="@+id/image_home_top_search"
         android:layout_centerVertical="true"
         android:gravity="center"
         android:textColor="@color/gery_title_bg"

         />
   <!-- 顶部搜索框-->
  <ImageView
      android:id="@+id/image_home_top_search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/search"
      android:layout_alignParentRight="true"
      android:layout_marginRight="20dp"
      android:layout_centerVertical="true"
      />



 </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <!--所有商家用listview显示-->
 <ListView
     android:id="@+id/lv_market"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:divider="@null"
     android:scrollbarSize="20dp"
/>

</LinearLayout>

 <!--<include layout="@layout/golder_home_item_view"/>-->



</LinearLayout>