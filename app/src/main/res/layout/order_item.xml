<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:background="@color/shallow_white_bg">
     <ImageView
         android:id="@+id/image_order_icon"
         android:layout_width="60dp"
         android:layout_height="60dp"

          />
        <TextView
            android:id="@+id/text_order_market_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/image_order_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            />
         <View
             android:layout_width="match_parent"
             android:layout_height="1px"
             android:background="@color/me_line"
             android:layout_toRightOf="@id/image_order_icon"
             android:layout_below="@id/text_order_market_name"
             android:layout_marginTop="10dp"
             android:layout_alignBottom="@id/text_order_market_name"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="30dp"/>

         <!--  <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/image_order_arrow"
               android:src="@drawable/top_home_arrow"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               />-->
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/text_order_shopname"
             android:layout_below="@id/text_order_market_name"
             android:layout_marginTop="10dp"
             android:layout_toRightOf="@id/image_order_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_order_shopprice"
            android:layout_below="@id/text_order_market_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:layout_toRightOf="@id/text_order_shopname"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_right_raw"
            android:visibility="invisible"
            android:src="@drawable/top_home_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/tiplayout">
        <TextView
            android:id="@+id/tip"
            android:text="你的订单为空"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>